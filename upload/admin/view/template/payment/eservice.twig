{{ header }}{{ column_left }}
<div id="content">
  	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<button type="submit" form="form-payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
				<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
  	</div>
	<div class="container-fluid">
		<div class="card">
			<div class="card-header"><i class="fa fa-pencil"></i> {{ text_edit }}</div>
			<div class="card-body">
				<form id="form-payment" action="{{ save }}" method="post" data-oc-toggle="ajax">
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="input-clientid">{{ entry_clientid }}</label>
						<div class="col-sm-10">
							<input type="text" name="payment_eservice_clientid" value="{{ payment_eservice_clientid }}" placeholder="{{ entry_clientid }}" id="input-clientid" class="form-control"/>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="input-password">{{ entry_password }}</label>
						<div class="col-sm-10">
							<input type="password" name="payment_eservice_password" value="{{ payment_eservice_password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control"/>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="input_brandid">{{ entry_brandid }}</label>
						<div class="col-sm-10">
							<input type="text" name="payment_eservice_brandid" value="{{ payment_eservice_brandid }}" placeholder="{{ entry_brandid }}" id="input-brandid" class="form-control"/>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="input-live-test">{{ entry_testmode }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_testmode" id="input-live-test" class="form-select">
							{% if payment_eservice_testmode %}
							<option value="1" selected="selected">{{ text_yes }}</option>
							<option value="0">{{ text_no }}</option>
							{% else %}
							<option value="1">{{ text_yes }}</option>
							<option value="0" selected="selected">{{ text_no }}</option>
							{% endif %}
						</select>
						</div>
					</div>
					<div class="row mb-3">
						{% if showPayTypeField == 1 %}
							<label class="col-sm-2 col-form-label" for="input-pay_type">{{ entry_pay_type }}</label>
							<div class="col-sm-10">
								<select name="payment_eservice_pay_type" id="input-pay_type" class="form-select">
									{% if payment_eservice_pay_type == 1 %}
									<option value="0">{{ entry_pay_hostedpay }}</option>
									<option value="1" selected="selected">{{ entry_pay_iframe }}</option>
									<option value="2">{{ entry_pay_redirect }}</option>
									{% elseif payment_eservice_pay_type == 2 %}
									<option value="0">{{ entry_pay_hostedpay }}</option>
									<option value="1">{{ entry_pay_iframe }}</option>
									<option value="2" selected="selected">{{ entry_pay_redirect }}</option>
									{% else %}
									<option value="0" selected="selected">{{ entry_pay_hostedpay }}</option>
									<option value="1">{{ entry_pay_iframe }}</option>
									<option value="2">{{ entry_pay_redirect }}</option>
									{% endif %}
								</select>
							</div>
						{% else %}
							<input type="hidden" name="payment_eservice_pay_type" value="{{ payment_eservice_pay_type }}"/>
						{% endif %}
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="input-pay_action">{{ entry_pay_action }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_pay_action" id="input-pay_action" class="form-select">
								{% if payment_eservice_pay_action == 1 %}
								<option value="0">{{ entry_pay_sale }}</option>
								<option value="1" selected="selected">{{ entry_pay_authorization }}</option>
								{% else %}
								<option value="0" selected="selected">{{ entry_pay_sale }}</option>
								<option value="1">{{ entry_pay_authorization }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">{{ entry_success_status }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_success_status_id" class="form-select">
								{% for order_status in order_statuses %}
									{% if order_status.order_status_id == payment_eservice_success_status_id %}
										<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
										<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
									{% endif %}
								{% endfor %}
						</select>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">{{ entry_failed_status }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_failed_status_id" class="form-select">
								{% for order_status in order_statuses %}
									{% if order_status.order_status_id == payment_eservice_failed_status_id %}
										<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
										<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
									{% endif %}
								{% endfor %}
						</select>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">{{ entry_refunded_status }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_refunded_status_id" class="form-select">
								{% for order_status in order_statuses %}
									{% if order_status.order_status_id == payment_eservice_refunded_status_id %}
										<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
										<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
									{% endif %}
								{% endfor %}
						</select>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">{{ entry_auth_status }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_auth_status_id" class="form-select">
								{% for order_status in order_statuses %}
									{% if order_status.order_status_id == payment_eservice_auth_status_id %}
										<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
										<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
									{% endif %}
								{% endfor %}
						</select>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">{{ entry_voided_status }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_voided_status_id" class="form-select">
								{% for order_status in order_statuses %}
									{% if order_status.order_status_id == payment_eservice_voided_status_id %}
										<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
										<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
									{% endif %}
								{% endfor %}
						</select>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">{{ entry_canceled_status }}</label>
						<div class="col-sm-10">
							<select name="payment_eservice_canceled_status_id" class="form-select">
								{% for order_status in order_statuses %}
									{% if order_status.order_status_id == payment_eservice_canceled_status_id %}
										<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
									{% else %}
										<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
									{% endif %}
								{% endfor %}
						</select>
						</div>
					</div>
					<div class="row mb-3">
						<label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
						<div class="col-sm-10">
						<div class="form-check form-switch form-switch-lg">
							<input type="hidden" name="payment_eservice_status" value="0"/>
							<input type="checkbox" name="payment_eservice_status" value="1" id="input-status" class="form-check-input"{% if payment_eservice_status %} checked{% endif %}/>
						</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="input-sort-order">{{ entry_sort_order }}</label>
						<div class="col-sm-10">
							<input type="text" name="payment_eservice_sort_order" value="{{ payment_eservice_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}